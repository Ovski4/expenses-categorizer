<form
    method="post"
    action="{{ path('sub_category_delete', {'id': sub_category.id}) }}"
    onsubmit="return confirm('{% trans %}Are you sure you want to delete this item?{% endtrans %}');"
    class="delete-button"
>
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ sub_category.id) }}">
    <button class="btn btn-outline-danger">{% trans %}Delete this sub category{% endtrans %}</button>
</form>
