{% extends 'base.html.twig' %}

{% block title %}SubCategory index{% endblock %}

{% block navbar %}
    {% include 'navbar.html.twig' with {'current': 'sub_category'} %}
{% endblock %}

{% block body %}
    <h1>SubCategory index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Transaction type</th>
                <th>Top category</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for sub_category in sub_categories %}
            <tr>
                <td>{{ sub_category.name }}</td>
                <td>{{ sub_category.topCategory.transactionType }}</td>
                <td>{{ sub_category.topCategory }}</td>
                <td>
                    <a href="{{ path('sub_category_show', {'id': sub_category.id}) }}"><i class="fas fa-eye"></i></a>
                    <a href="{{ path('sub_category_edit', {'id': sub_category.id}) }}"><i class="fas fa-edit"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('sub_category_new') }}">Create new</a>
{% endblock %}
