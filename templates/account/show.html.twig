{% extends 'base.html.twig' %}

{% block title %}Account{% endblock %}

{% block navbar %}
    {% include 'navbar.html.twig' with {'current': 'account'} %}
{% endblock %}

{% block body %}
    <h1>Account</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Name</th>
                <td>{{ account.name }}</td>
            </tr>
            <tr>
                <th>Aliases</th>
                <td>{{ account.aliases | join(', ') }}</td>
            </tr>
            <tr>
                <th>Currency</th>
                <td>{{ account.currency }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-outline-primary" href="{{ path('account_index') }}">Go back to the account list</a>

    <a class="btn btn-outline-primary" href="{{ path('account_edit', {'id': account.id}) }}">Edit</a>

    {{ include('account/_delete_form.html.twig') }}
{% endblock %}
