{% extends 'base.html.twig' %}

{% block title %}{% trans %}Account list{% endtrans %}{% endblock %}

{% block navbar %}
    {% include 'navbar.html.twig' with {'current': 'account'} %}
{% endblock %}

{% block body %}
    <h1>{% trans %}Account list{% endtrans %}</h1>

    <a type="button" class="btn btn-outline-primary" href="{{ path('account_new') }}">Create a new account</a>

    <table class="table">
        <thead class="thead-dark">
            <tr>
                <th>{% trans %}Name{% endtrans %}</th>
                <th>{% trans %}Aliases{% endtrans %}</th>
                <th>{% trans %}Currency{% endtrans %}</th>
                <th>{% trans %}Actions{% endtrans %}</th>
            </tr>
        </thead>
        <tbody>
        {% for account in accounts %}
            <tr>
                <td>{{ account.name }}</td>
                <td>{{ account.aliases | join(', ') }}</td>
                <td>{{ account.currency }}</td>
                <td>
                    <a href="{{ path('account_edit', {'id': account.id}) }}"><i class="fas fa-edit"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">{% trans %}No account found{% endtrans %}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
