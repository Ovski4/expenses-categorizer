{% extends 'base.html.twig' %}

{% block title %}{% trans %}Tag list{% endtrans %}{% endblock %}

{% block navbar %}
    {% include 'navbar.html.twig' with {'current': 'tag'} %}
{% endblock %}

{% block body %}
    <h1>{% trans %}Tag list{% endtrans %}</h1>

    <a type="button" class="btn btn-outline-primary" href="{{ path('tag_new') }}">
        {% trans %}Create a new tag{% endtrans %}
    </a>

    <table class="table">
        <thead class="thead-dark">
            <tr>
                <th>{% trans %}Name{% endtrans %}</th>
                <th>{% trans %}Balance{% endtrans %}</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for tag in tags %}
            <tr>
                <td>{{ tag.name }}</td>
                <td>{{ balances[tag.id] ?? '-' }}</td>
                <td>
                    <a href="{{ path('tag_edit', {'id': tag.id}) }}"><i class="fas fa-edit"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {% if tags|length == 0 %}
        <div id="rule-description" class="alert alert-info" role="alert">
            <i class="fas fa-info-circle"></i>
            {% trans %}tags_info{% endtrans %}
        </div>
    {% endif %}

{% endblock %}
