{% extends 'base.html.twig' %}

{% block title %}SubCategoryTransactionRule index{% endblock %}

{% block navbar %}
    {% include 'navbar.html.twig' with {'current': 'sub_category_transaction_rule'} %}
{% endblock %}

{% block body %}
    <h1>SubCategoryTransactionRule index</h1>

    <table class="table">
        <thead class="thead-dark">
            <tr>
                <th>Contains</th>
                <th>Amount</th>
                <th>Operator</th>
                <th>Transaction type</th>
                <th>Sub category</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for sub_category_transaction_rule in sub_category_transaction_rules %}
            <tr>
                <td>{{ sub_category_transaction_rule.contains | capitalize }}</td>
                <td>
                    {{ sub_category_transaction_rule.amount }}
                    <em>{% if sub_category_transaction_rule.amount is null %}undefined{% endif %}</em>
                </td>
                <td>
                    {{ sub_category_transaction_rule.operator }}
                    <em>{% if sub_category_transaction_rule.operator is null %}undefined{% endif %}</em>
                </td>
                <td>{{ sub_category_transaction_rule.subCategory.topCategory.transactionType }}</td>
                <td>{{ sub_category_transaction_rule.subCategory }}</td>
                <td>
                    <a href="{{ path('sub_category_transaction_rule_show', {'id': sub_category_transaction_rule.id}) }}"><i class="fas fa-eye"></i></a>
                    <a href="{{ path('sub_category_transaction_rule_edit', {'id': sub_category_transaction_rule.id}) }}"><i class="fas fa-edit"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('sub_category_transaction_rule_new') }}">Create new</a>
{% endblock %}
