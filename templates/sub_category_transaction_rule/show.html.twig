{% extends 'base.html.twig' %}

{% block title %}SubCategoryTransactionRule{% endblock %}

{% block navbar %}
    {% include 'navbar.html.twig' with {'current': 'sub_category_transaction_rule'} %}
{% endblock %}

{% block body %}
    <h1>SubCategoryTransactionRule</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Contains</th>
                <td>{{ sub_category_transaction_rule.contains }}</td>
            </tr>
            <tr>
                <th>Amount</th>
                <td>
                    {{ sub_category_transaction_rule.amount }}
                    <em>{% if sub_category_transaction_rule.amount is null %}undefined{% endif %}</em>
                </td>
            </tr>
            <tr>
                <th>Operator</th>
                <td>
                    {{ sub_category_transaction_rule.operator }}
                    <em>{% if sub_category_transaction_rule.operator is null %}undefined{% endif %}</em>
                </td>
            </tr>
            <tr>
                <th>Sub category</th>
                <td>{{ sub_category_transaction_rule.subCategory }}</td>
            </tr>
            <tr>
                <th>Transaction type</th>
                <td>{{ sub_category_transaction_rule.subCategory.topCategory.transactionType }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-outline-primary" href="{{ path('sub_category_transaction_rule_index') }}">Go back to the rule list</a>

    <a class="btn btn-outline-primary" href="{{ path('sub_category_transaction_rule_edit', {'id': sub_category_transaction_rule.id}) }}">Edit</a>

    {{ include('sub_category_transaction_rule/_delete_form.html.twig') }}
{% endblock %}
