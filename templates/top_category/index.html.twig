{% extends 'base.html.twig' %}

{% block title %}TopCategory index{% endblock %}

{% block body %}
    <h1>TopCategory index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for top_category in top_categories %}
            <tr>
                <td>{{ top_category.id }}</td>
                <td>{{ top_category.name }}</td>
                <td>
                    <a href="{{ path('top_category_show', {'id': top_category.id}) }}">show</a>
                    <a href="{{ path('top_category_edit', {'id': top_category.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('top_category_new') }}">Create new</a>
{% endblock %}
