{% extends 'base.html.twig' %}

{% block title %}TopCategory index{% endblock %}

{% block navbar %}
    {% include 'navbar.html.twig' with {'current': 'category'} %}
{% endblock %}

{% block body %}
    <h1>TopCategory index</h1>

    <a type="button" class="btn btn-outline-primary" href="{{ path('top_category_new') }}">Create a new top category</a>

    <table class="table">
        <thead class="thead-dark">
            <tr>
                <th>Name</th>
                <th>Transaction type</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for top_category in top_categories %}
            <tr>
                <td>{{ top_category.name }}</td>
                <td>{{ top_category.transactionType }}</td>
                <td>
                    <a href="{{ path('top_category_show', {'id': top_category.id}) }}"><i class="fas fa-eye"></i></a>
                    <a href="{{ path('top_category_edit', {'id': top_category.id}) }}"><i class="fas fa-edit"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
