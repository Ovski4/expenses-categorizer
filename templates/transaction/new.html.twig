{% extends 'base.html.twig' %}

{% block title %}{% trans %}New transaction{% endtrans %}{% endblock %}

{% block navbar %}
    {% include 'navbar.html.twig' with {'current': 'transaction'} %}
{% endblock %}

{% block body %}
    <h1>{% trans %}Create a new transaction{% endtrans %}</h1>

    {{ include('transaction/_form.html.twig') }}

    <a class="btn btn-outline-primary" href="{{ path('transaction_index') }}">
        {% trans %}Go back to the transaction list{% endtrans %}
    </a>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script type="module">
        import lib from '/js/sf_collection.js';
        lib.sfCollection.init();
    </script>
{% endblock %}
