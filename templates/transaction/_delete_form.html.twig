<form
    method="post"
    action="{{ path('transaction_delete', {'id': transaction.id}) }}"
    onsubmit="return confirm('{% trans %}Are you sure you want to delete this item?{% endtrans %}');"
    class="delete-button"
>
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ transaction.id) }}">
    <button class="btn btn-outline-danger">{% trans %}Delete this transaction{% endtrans %}</button>
</form>
