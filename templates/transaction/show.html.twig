{% extends 'base.html.twig' %}

{% block title %}Transaction{% endblock %}

{% block navbar %}
    {% include 'navbar.html.twig' with {'current': 'transaction'} %}
{% endblock %}

{% block body %}
    <h1>Transaction</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Label</th>
                <td>{{ transaction.label }}</td>
            </tr>
            <tr>
                <th>Amount</th>
                <td>{{ transaction.amount }}</td>
            </tr>
            <tr>
                <th>Created_at</th>
                <td>{{ transaction.createdAt ? transaction.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Account</th>
                <td>{{ transaction.account }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-outline-primary" href="{{ path('transaction_index') }}">Go back to the transaction list</a>

    <a class="btn btn-outline-primary" href="{{ path('transaction_edit', {'id': transaction.id}) }}">Edit</a>

    {{ include('transaction/_delete_form.html.twig') }}
{% endblock %}
