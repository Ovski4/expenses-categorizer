{% extends 'base.html.twig' %}

{% block title %}Transaction index{% endblock %}

{% block navbar %}
    {% include 'navbar.html.twig' with {'current': 'transaction'} %}
{% endblock %}

{% block body %}
    <h1>Transaction index</h1>

    <div class="pagerfanta">
        {{ pagerfanta(pager, 'twitter_bootstrap4') }}
        <p>{{ pager.getNbResults }} transactions</p>
    </div>

    <a type="button" class="btn btn-outline-primary" href="{{ path('transaction_new') }}">Create a new transaction</a>
    <a
        type="button"
        class="{{ only_show_uncategorized ? 'active' : '' }} btn btn-outline-primary"
        href="{{ path('transaction_index', {'page': pager.currentPage, 'only_show_uncategorized': ''}) }}"
    >
        Show only transactions to categorize
    </a>

    <a
        type="button"
        class="{{ only_show_uncategorized ? '' : 'active' }} btn btn-outline-primary"
        href="{{ path('transaction_index', {'page': pager.currentPage}) }}"
    >
        Show all transactions
    </a>

    <table class="table">
        <thead class="thead-dark">
            <tr>
                <th>Label</th>
                <th>Amount</th>
                <th>Created_at</th>
                <th>Account</th>
                <th>Sub category</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for transaction in pager.currentPageResults %}
            <tr>
                <td>{{ transaction.label | capitalize }}</td>
                <td>{{ transaction.amount }}</td>
                <td>{{ transaction.createdAt|date('Y-m-d') }}</td>
                <td>{{ transaction.account }}</td>
                <td>
                  {{ transaction.subCategory }}
                  <em>{% if transaction.subCategory is null %}uncategorized{% endif %}</em>
                </td>
                <td>
                    <a href="{{ path('transaction_show', {'id': transaction.id}) }}"><i class="fas fa-eye"></i></a>
                    <a href="{{ path('transaction_edit', {'id': transaction.id}) }}"><i class="fas fa-edit"></i></a>
                    <a href="{{ path('sub_category_transaction_rule_new', {'transaction': transaction.id }) }}"><i class="fas fa-sliders-h"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
