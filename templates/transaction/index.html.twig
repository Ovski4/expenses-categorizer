{% extends 'base.html.twig' %}

{% block title %}Transaction index{% endblock %}

{% block body %}
    <h1>Transaction index</h1>

    <div class="pagerfanta">
        {{ pagerfanta(pager, 'twitter_bootstrap4') }}
    </div>

    <table class="table">
        <thead>
            <tr>
                <th>Label</th>
                <th>Amount</th>
                <th>Created_at</th>
                <th>Account</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for transaction in pager.currentPageResults %}
            <tr>
                <td>{{ transaction.label }}</td>
                <td>{{ transaction.amount }}</td>
                <td>{{ transaction.createdAt ? transaction.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ transaction.account }}</td>
                <td>
                    <a href="{{ path('transaction_show', {'id': transaction.id}) }}">show</a>
                    <a href="{{ path('transaction_edit', {'id': transaction.id}) }}">edit</a>
                    <a href="{{ path('sub_category_transaction_rule_new', {'contains': transaction.label}) }}">Create a rule</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('transaction_new') }}">Create new</a>
{% endblock %}
